<resources>

    <style name="AppTheme"
        parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryDark">@color/theme_primary_dark</item>
        <item name="colorAccent">@color/md_red_400</item>
    </style>

    <style name="NoReDrawWindowsBackground"
        parent="AppTheme">
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="CollapsingToolbarTitleStyle"
        parent="Widget.Design.CollapsingToolbar">
        <item name="android:textColor">@android:color/transparent</item>
    </style>

    <style name="ViaTextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/md_grey_400</item>
    </style>

    <style name="LisPaddingStyle">
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingTop">16dp</item>
    </style>
</resources>
